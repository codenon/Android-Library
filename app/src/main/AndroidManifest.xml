<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.conon.android.library.sample">

    <!-- 访问internet权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="cn.conon.android.library.sample.ListSamples"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.conon.android.library.sample.network.video.GetVideoListXmlActivity"
            android:label="Network/Video List Xml">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="cn.conon.android.library.sample.SAMPLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.conon.android.library.sample.network.video.GetVideoListJsonActivity"
            android:label="Network/Video List Json">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="cn.conon.android.library.sample.SAMPLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.conon.android.library.sample.network.video.AddVideoActivity"
            android:label="Network/Video Add">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="cn.conon.android.library.sample.SAMPLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.conon.android.library.sample.network.download.FileDownloadActivity"
            android:label="Network/Download">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="cn.conon.android.library.sample.SAMPLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.conon.android.library.sample.network.upload.FileUploadActivity"
            android:label="Network/Upload">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="cn.conon.android.library.sample.SAMPLE" />
            </intent-filter>
        </activity>
    </application>

</manifest>
